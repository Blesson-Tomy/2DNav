<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->

        <!-- Load Buildings Button -->
        <Button
            android:id="@+id/loadBuildingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load Buildings from Firebase"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <!-- Divider -->

        <!-- Building Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Building:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/buildingSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="10dp"
            android:layout_marginBottom="20dp"/>

        <!-- Fetch Walls Button -->
        <Button
            android:id="@+id/fetchWallsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch Walls for Selected Building"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="20dp"/>

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status messages will appear here..."
            android:textSize="14sp"
            android:textColor="#000000"
            android:background="#E3F2FD"
            android:padding="15dp"
            android:layout_marginBottom="20dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="20dp"/>

        <!-- Walls Display -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wall Data:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#F5F5F5"
            android:padding="15dp">

            <TextView
                android:id="@+id/wallsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Walls will appear here after fetching..."
                android:textSize="13sp"
                android:textColor="#000000"
                android:fontFamily="monospace"
                android:lineSpacingExtra="4dp"/>

        </ScrollView>

    </LinearLayout>

</ScrollView>